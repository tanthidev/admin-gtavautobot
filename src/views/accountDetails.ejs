<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <!-- Header -->
    <header class="bg-gray-800 text-white p-4 rounded mb-6 flex justify-between items-center">
        <a href="/admin/dashboard" class="text-blue-500 hover:underline bg-white text-sm px-4 py-2 rounded">Back to Dashboard</a>
        <h1 class="text-2xl font-bold">Account Details</h1>
        <a href="/admin/accounts/edit/<%= account._id %>" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Edit Account</a>
    </header>

    <section class="mb-6">
        <h2 class="text-xl font-semibold">Account Information</h2>
        <table class="min-w-full border-collapse border border-gray-300 mt-4">
            <tr>
                <th class="py-2 px-4 border border-gray-300">Username</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.Username %></td>
            </tr>
            <tr>
                <th class="py-2 px-4 border border-gray-300">Status</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.Status %></td>
            </tr>
            <tr>
                <th class="py-2 px-4 border border-gray-300">Tool Name</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.ToolName.join(', ') %></td>
            </tr>
            <tr>
                <th class="py-2 px-4 border border-gray-300">Expiration</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.ExpirationDate || '' %></td>
            </tr>
            <tr>
                <th class="py-2 px-4 border border-gray-300">Register Date</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.RegisterDate || '' %></td>
            </tr>
            <tr>
                <th class="py-2 px-4 border border-gray-300">Note</th>
                <td class="py-2 px-4 border border-gray-300"><%= account.Note || '' %></td>
            </tr>
        </table>
    </section>

    <section class="mb-6">
        <h2 class="text-xl font-semibold">Login History</h2>
        <table class="min-w-full border-collapse border border-gray-300 mt-4">
            <thead>
                <tr class="bg-gray-200">
                    <th class="py-2 px-4 border border-gray-300">Login Time</th>
                    <th class="py-2 px-4 border border-gray-300">Device ID</th>
                    <th class="py-2 px-4 border border-gray-300">Status</th>
                    <th class="py-2 px-4 border border-gray-300">Message</th>
                    <th class="py-2 px-4 border border-gray-300">Location</th>
                </tr>
            </thead>
            <tbody>
                <% loginHistory.forEach(login => { %>
                <tr>
                    <td class="py-2 px-4 border border-gray-300"><%= login.LoginTime %></td>
                    <td class="py-2 px-4 border border-gray-300"><%= login.Device_id %></td>
                    <td class="py-2 px-4 border border-gray-300"><%= login.Status %></td>
                    <td class="py-2 px-4 border border-gray-300"><%= login.Note %></td>

                    <td class="py-2 px-4 border border-gray-300"><%= login.Location || 'N/A' %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </section>


    <footer class="mt-6">
        <a href="/admin/dashboard" class="text-blue-500 hover:underline">Back to Dashboard</a>
    </footer>
</body>
</html>